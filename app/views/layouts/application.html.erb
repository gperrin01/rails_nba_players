<!DOCTYPE html>
<html>
<head>
  <title>NbaPlayers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <h2>My favourite NBA players</h2>
    <nav>
      <ul class='nav-list'>
        <li> <%= link_to('All Players', players_path) %> </li>
        <li> <%= link_to('Add a Player', new_player_path) %> </li>
      </ul>
    </nav>
  </header>

  <div id="yield_container">
    <%= yield %>
  </div>

</body>
</html>
